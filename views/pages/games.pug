html(lang="en")
  head
    meta(charset="utf-8")
    link(rel="stylesheet" href="/css/index.css")
    link(rel="stylesheet" href="/css/input.css")
    title Games Library
  body(onload="init()")
    include ../partial/header.pug
    .middle
      input#search(type="search" placeholder="Search...")
      | 
      button#searchBtn Search
      br
      .row
        div
          label(for="genreSelect") Genre:
          select#genreSelect
            option(value=-1) - Any
        div
          label(for="storeSelect") Sold in:
          select#storeSelect
            option(value=-1) - Any
      br
      br
      #gamesList
    script(src="/js/games.js")